{
    "version": 3,
    "configurePresets": [
        {
            "name": "x64-debug-cl",
            "displayName": "Windows x64 Debug (cl)",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl",
                "CMAKE_BUILD_TYPE": "Debug"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "x64-release-cl",
